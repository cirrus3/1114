<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsEditActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/add_marker_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="푸드트럭의 위치를 선택해주세요"
        android:background="@color/orange"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <!-- Add below the map fragment -->

    <Button
        android:id="@+id/display_all_markers_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/add_marker_button"
        android:layout_marginTop="-600dp"
        android:text="전체 푸드트럭"
        android:background="@color/orange"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        >

        <EditText
            android:id="@+id/search_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="푸드트럭명 또는 내용을 입력하세요" />

        <Button
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="검색" />
    </LinearLayout>

</RelativeLayout>
